# Environment variables for Expense Tracker Frontend (React)
# Copy this file to ".env" and adjust values as needed.
# NOTE: Do NOT commit your actual .env to source control.

# API base (relative path or absolute URL). Relative recommended for CRA proxy or same-origin API.
REACT_APP_API_BASE=/api

# Backend URL (optional for local dev). Provide absolute URL when calling a remote API server.
# Example: http://localhost:4000 or https://api.example.com
REACT_APP_BACKEND_URL=

# Frontend public URL (optional). Useful for building absolute links.
# Example: http://localhost:3000 or https://app.example.com
REACT_APP_FRONTEND_URL=

# WebSocket URL (optional). Example: ws://localhost:4000 or wss://ws.example.com
REACT_APP_WS_URL=

# Node environment for app logic (development|production|test). Defaults to process.env.NODE_ENV when not set.
REACT_APP_NODE_ENV=development

# Disable telemetry (boolean). Default: false
REACT_APP_NEXT_TELEMETRY_DISABLED=false

# Enable source maps in builds (boolean). Default: true unless set to "false"
REACT_APP_ENABLE_SOURCE_MAPS=true

# Port the dev server runs on (numeric). Default: 3000
REACT_APP_PORT=3000

# Trust proxy (boolean). Typically false on frontend; included for parity.
REACT_APP_TRUST_PROXY=false

# Log level (silent|debug|info|warn|error). Default: info
REACT_APP_LOG_LEVEL=info

# Healthcheck path (must start with "/"). Default: /health
REACT_APP_HEALTHCHECK_PATH=/health

# Feature flags as JSON object. Example: {"newNavbar": true, "enableCharts": false}
REACT_APP_FEATURE_FLAGS={"playfulUI": true}

# Experiments enabled (boolean). Default: false
REACT_APP_EXPERIMENTS_ENABLED=false
